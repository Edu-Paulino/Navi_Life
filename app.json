{
  "expo": {
    "name": "Navi Life",
    "slug": "navi-life",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "navilife",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A3A52"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.navilife.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Este app precisa de acesso ao microfone para o assistente de voz.",
        "NSMicrophoneUsageDescription": "Este app precisa de acesso ao microfone para reconhecimento de voz."
      }
    },
    "android": {
      "package": "com.navilife.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A3A52"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
